# Enforce LF line endings in all text files
* text=auto eol=lf

# Ensure consistent line endings for common code/text files
*.js     text eol=lf
*.ts     text eol=lf
*.tsx    text eol=lf
*.jsx    text eol=lf
*.json   text eol=lf
*.css    text eol=lf
*.scss   text eol=lf
*.html   text eol=lf
*.md     text eol=lf
*.yml    text eol=lf
*.yaml   text eol=lf
*.env    text eol=lf
*.gitignore text eol=lf

# Treat shell scripts as text and use LF endings
*.sh     text eol=lf

# Treat Windows batch files as text with CRLF endings
*.bat    text eol=crlf

# Binary files - never modify line endings
*.png    binary
*.jpg    binary
*.jpeg   binary
*.gif    binary
*.webp   binary
*.ico    binary
*.pdf    binary
*.woff   binary
*.woff2  binary
*.ttf    binary
*.eot    binary
*.otf    binary
